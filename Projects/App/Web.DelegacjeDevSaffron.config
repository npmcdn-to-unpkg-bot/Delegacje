<?xml version="1.0" encoding="utf-8"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">   
    <connectionStrings>
      <add name="BusinessTripsEntities" 
        connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=DelegacjeDev;Integrated Security=True" 
        xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    </connectionStrings>  
  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />    
  </system.web>
	<log4net xdt:Transform="Replace">
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="C:\ApplicationFiles\DEV\Delegacje\logs\error.log" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="_yyyy-MM-dd.'txt'" />
			<maxSizeRollBackups value="30" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d [%t] %-2p %c [%x] - %m%n" />
			</layout>
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="RollingFileAppender" />
		</root>
	</log4net>
</configuration>